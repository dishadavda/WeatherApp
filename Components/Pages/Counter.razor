@page "/counter"
@rendermode InteractiveServer
@inject IJSRuntime jS

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<AuthorizeView>
    <Authorized>
        <br /><br>
        <button class="btn btn-outline-primary" @onclick="DisplayGreatting">Display Freting

        </button>
    </Authorized>
</AuthorizeView>
@code {
    private int currentCount = 0;
    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationState{ get; set; }
    private void IncrementCount()
    {
        currentCount++;
    }
    private async Task DisplayGreatting()
    {
        var AuthenticationStak = await AuthenticationState;
        var message = $"Hello {AuthenticationStak.User.Identity.Name}";
        await jS.InvokeVoidAsync("alert", message);
    }
}
